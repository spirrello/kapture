FROM golang:1.12.7 as builder

LABEL maintainer="Stefano Pirrello <spirrello@gmail.com>"

ENV GO111MODULE=on

WORKDIR /go/src/kcapture

COPY go.mod go.sum ./

RUN go mod download

COPY . .

WORKDIR /go/src/kcapture/services/kcapture-api

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /kcapture-api


####### Start new stage from scratch ########

FROM scratch

WORKDIR /

COPY --from=builder /kcapture-api .

ENTRYPOINT ["/kcapture-api"]
